package user

import "github.com/jimtrung/go-nexus/internal/domain/models"

templ SecurityContent() {
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-xl">
        <h2 class="text-2xl font-semibold">Security</h2>

        <h3 class="mt-4 text-lg font-medium">Recent Logins</h3>
        <ul class="mt-2 text-gray-600">
            <li>📍 New York, USA - 2025-03-03 14:05</li>
            <li>📍 Tokyo, Japan - 2025-03-01 22:15</li>
            <li>📍 London, UK - 2025-02-28 08:45</li>
        </ul>

        <h3 class="mt-4 text-lg font-medium">Active Sessions</h3>
        <ul class="mt-2">
            <li class="flex justify-between items-center py-2">
                <span>Chrome - Windows 10</span>
                <button class="text-red-500 hover:underline">Log Out</button>
            </li>
            <li class="flex justify-between items-center py-2">
                <span>Safari - iPhone 13</span>
                <button class="text-red-500 hover:underline">Log Out</button>
            </li>
        </ul>
    </div>
}

templ SecurityPageView(user models.User) {
    @ProfilePage(user, SecurityContent())
}
